<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mc.recommend.mapper.RecommendMusicMapper">
    
    <resultMap type="RecommendMusic" id="RecommendMusicResult">
        <result property="musicId"    column="music_id"    />
        <result property="title"    column="title"    />
        <result property="mp3Url"    column="mp3_url"    />
        <result property="coverUrl"    column="cover_url"    />
        <result property="artist"    column="artist"    />
        <result property="genre"    column="genre"    />
        <result property="duration"    column="duration"    />
        <result property="description"    column="description"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectRecommendMusicVo">
        select music_id, title, mp3_url, cover_url, artist, genre, duration, description, status, create_by, create_time, update_by, update_time, remark from recommend_music
    </sql>

    <select id="selectRecommendMusicList" parameterType="RecommendMusic" resultMap="RecommendMusicResult">
        <include refid="selectRecommendMusicVo"/>
        <where>  
            <if test="keyword != null and keyword != ''">
                and (title like concat('%', #{keyword}, '%') or artist like concat('%', #{keyword}, '%'))
            </if>
            <if test="title != null and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="artist != null and artist != ''"> and artist like concat('%', #{artist}, '%')</if>
            <if test="genre != null and genre != ''"> and genre like concat('%', #{genre}, '%')</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectRecommendMusicByMusicId" parameterType="Long" resultMap="RecommendMusicResult">
        <include refid="selectRecommendMusicVo"/>
        where music_id = #{musicId}
    </select>

    <insert id="insertRecommendMusic" parameterType="RecommendMusic" useGeneratedKeys="true" keyProperty="musicId">
        insert into recommend_music
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="mp3Url != null and mp3Url != ''">mp3_url,</if>
            <if test="coverUrl != null">cover_url,</if>
            <if test="artist != null">artist,</if>
            <if test="genre != null">genre,</if>
            <if test="duration != null">duration,</if>
            <if test="description != null">description,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="mp3Url != null and mp3Url != ''">#{mp3Url},</if>
            <if test="coverUrl != null">#{coverUrl},</if>
            <if test="artist != null">#{artist},</if>
            <if test="genre != null">#{genre},</if>
            <if test="duration != null">#{duration},</if>
            <if test="description != null">#{description},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateRecommendMusic" parameterType="RecommendMusic">
        update recommend_music
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="mp3Url != null and mp3Url != ''">mp3_url = #{mp3Url},</if>
            <if test="coverUrl != null">cover_url = #{coverUrl},</if>
            <if test="artist != null">artist = #{artist},</if>
            <if test="genre != null">genre = #{genre},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where music_id = #{musicId}
    </update>

    <delete id="deleteRecommendMusicByMusicId" parameterType="Long">
        delete from recommend_music where music_id = #{musicId}
    </delete>

    <delete id="deleteRecommendMusicByMusicIds" parameterType="String">
        delete from recommend_music where music_id in 
        <foreach item="musicId" collection="array" open="(" separator="," close=")">
            #{musicId}
        </foreach>
    </delete>
</mapper>

