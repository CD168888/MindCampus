<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mc.recommend.mapper.RecommendCourseMapper">
    
    <resultMap type="RecommendCourse" id="RecommendCourseResult">
        <result property="courseId"    column="course_id"    />
        <result property="title"    column="title"    />
        <result property="mp4Url"    column="mp4_url"    />
        <result property="coverUrl"    column="cover_url"    />
        <result property="lecturer"    column="lecturer"    />
        <result property="duration"    column="duration"    />
        <result property="chapters"    column="chapters"    />
        <result property="level"    column="level"    />
        <result property="description"    column="description"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectRecommendCourseVo">
        select course_id, title, mp4_url, cover_url, lecturer, duration, chapters, level, description, status, create_by, create_time, update_by, update_time, remark from recommend_course
    </sql>

    <select id="selectRecommendCourseList" parameterType="RecommendCourse" resultMap="RecommendCourseResult">
        <include refid="selectRecommendCourseVo"/>
        <where>  
            <if test="title != null and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="lecturer != null and lecturer != ''"> and lecturer like concat('%', #{lecturer}, '%')</if>
            <if test="level != null and level != ''"> and level = #{level}</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectRecommendCourseByCourseId" parameterType="Long" resultMap="RecommendCourseResult">
        <include refid="selectRecommendCourseVo"/>
        where course_id = #{courseId}
    </select>

    <insert id="insertRecommendCourse" parameterType="RecommendCourse" useGeneratedKeys="true" keyProperty="courseId">
        insert into recommend_course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="mp4Url != null and mp4Url != ''">mp4_url,</if>
            <if test="coverUrl != null">cover_url,</if>
            <if test="lecturer != null">lecturer,</if>
            <if test="duration != null">duration,</if>
            <if test="chapters != null">chapters,</if>
            <if test="level != null">level,</if>
            <if test="description != null">description,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="mp4Url != null and mp4Url != ''">#{mp4Url},</if>
            <if test="coverUrl != null">#{coverUrl},</if>
            <if test="lecturer != null">#{lecturer},</if>
            <if test="duration != null">#{duration},</if>
            <if test="chapters != null">#{chapters},</if>
            <if test="level != null">#{level},</if>
            <if test="description != null">#{description},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateRecommendCourse" parameterType="RecommendCourse">
        update recommend_course
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="mp4Url != null and mp4Url != ''">mp4_url = #{mp4Url},</if>
            <if test="coverUrl != null">cover_url = #{coverUrl},</if>
            <if test="lecturer != null">lecturer = #{lecturer},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="chapters != null">chapters = #{chapters},</if>
            <if test="level != null">level = #{level},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where course_id = #{courseId}
    </update>

    <delete id="deleteRecommendCourseByCourseId" parameterType="Long">
        delete from recommend_course where course_id = #{courseId}
    </delete>

    <delete id="deleteRecommendCourseByCourseIds" parameterType="String">
        delete from recommend_course where course_id in 
        <foreach item="courseId" collection="array" open="(" separator="," close=")">
            #{courseId}
        </foreach>
    </delete>
</mapper>

