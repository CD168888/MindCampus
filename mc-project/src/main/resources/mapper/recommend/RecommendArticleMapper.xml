<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mc.recommend.mapper.RecommendArticleMapper">
    
    <resultMap type="RecommendArticle" id="RecommendArticleResult">
        <result property="articleId"    column="article_id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="summary"    column="summary"    />
        <result property="author"    column="author"    />
        <result property="readCount"    column="read_count"    />
        <result property="category"    column="category"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectRecommendArticleVo">
        select article_id, title, content, summary, author, read_count, category, status, create_by, create_time, update_by, update_time, remark from recommend_article
    </sql>

    <select id="selectRecommendArticleList" parameterType="RecommendArticle" resultMap="RecommendArticleResult">
        <include refid="selectRecommendArticleVo"/>
        <where>  
            <if test="title != null and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="author != null and author != ''"> and author like concat('%', #{author}, '%')</if>
            <if test="category != null and category != ''"> and category = #{category}</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectRecommendArticleByArticleId" parameterType="Long" resultMap="RecommendArticleResult">
        <include refid="selectRecommendArticleVo"/>
        where article_id = #{articleId}
    </select>

    <insert id="insertRecommendArticle" parameterType="RecommendArticle" useGeneratedKeys="true" keyProperty="articleId">
        insert into recommend_article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="summary != null">summary,</if>
            <if test="author != null">author,</if>
            <if test="readCount != null">read_count,</if>
            <if test="category != null">category,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="summary != null">#{summary},</if>
            <if test="author != null">#{author},</if>
            <if test="readCount != null">#{readCount},</if>
            <if test="category != null">#{category},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateRecommendArticle" parameterType="RecommendArticle">
        update recommend_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="summary != null">summary = #{summary},</if>
            <if test="author != null">author = #{author},</if>
            <if test="readCount != null">read_count = #{readCount},</if>
            <if test="category != null">category = #{category},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where article_id = #{articleId}
    </update>

    <delete id="deleteRecommendArticleByArticleId" parameterType="Long">
        delete from recommend_article where article_id = #{articleId}
    </delete>

    <delete id="deleteRecommendArticleByArticleIds" parameterType="String">
        delete from recommend_article where article_id in 
        <foreach item="articleId" collection="array" open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </delete>
</mapper>

