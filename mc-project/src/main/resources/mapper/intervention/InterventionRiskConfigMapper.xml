<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mc.intervention.mapper.InterventionRiskConfigMapper">

    <resultMap type="com.mc.intervention.domain.InterventionRiskConfig" id="InterventionRiskConfigResult">
        <id property="configId" column="config_id" />
        <result property="riskLevel" column="risk_level" />
        <result property="minScore" column="min_score" />
        <result property="maxScore" column="max_score" />
        <result property="notificationTemplate" column="notification_template" />
        <result property="status" column="status" />
        <result property="createBy" column="create_by" />
        <result property="createTime" column="create_time" />
        <result property="updateBy" column="update_by" />
        <result property="updateTime" column="update_time" />
        <result property="remark" column="remark" />
    </resultMap>

    <sql id="selectConfigVo">
        select config_id, risk_level, min_score, max_score, 
               notification_template, status, 
               create_by, create_time, update_by, update_time, remark
        from intervention_risk_config
    </sql>

    <select id="selectConfigList" parameterType="com.mc.intervention.domain.InterventionRiskConfig" resultMap="InterventionRiskConfigResult">
        <include refid="selectConfigVo" />
        <where>
            <if test="configId != null">
                AND config_id = #{configId}
            </if>
            <if test="riskLevel != null and riskLevel != ''">
                AND risk_level = #{riskLevel}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by min_score asc
    </select>

    <select id="selectConfigById" parameterType="Long" resultMap="InterventionRiskConfigResult">
        <include refid="selectConfigVo" />
        where config_id = #{configId}
    </select>

    <select id="selectConfigByRiskLevel" parameterType="String" resultMap="InterventionRiskConfigResult">
        <include refid="selectConfigVo" />
        where risk_level = #{riskLevel}
    </select>

    <select id="selectConfigByScore" parameterType="Integer" resultMap="InterventionRiskConfigResult">
        <include refid="selectConfigVo" />
        where min_score &lt;= #{score} and max_score &gt;= #{score}
    </select>

    <insert id="insertConfig" parameterType="com.mc.intervention.domain.InterventionRiskConfig" useGeneratedKeys="true" keyProperty="configId">
        insert into intervention_risk_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="riskLevel != null">risk_level,</if>
            <if test="minScore != null">min_score,</if>
            <if test="maxScore != null">max_score,</if>
            <if test="notificationTemplate != null">notification_template,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="riskLevel != null">#{riskLevel},</if>
            <if test="minScore != null">#{minScore},</if>
            <if test="maxScore != null">#{maxScore},</if>
            <if test="notificationTemplate != null">#{notificationTemplate},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateConfig" parameterType="com.mc.intervention.domain.InterventionRiskConfig">
        update intervention_risk_config
        <set>
            <if test="riskLevel != null">risk_level = #{riskLevel},</if>
            <if test="minScore != null">min_score = #{minScore},</if>
            <if test="maxScore != null">max_score = #{maxScore},</if>
            <if test="notificationTemplate != null">notification_template = #{notificationTemplate},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        where config_id = #{configId}
    </update>

    <delete id="deleteConfigById" parameterType="java.lang.Long">
        delete from intervention_risk_config
        where config_id = #{configId}
    </delete>

    <delete id="deleteConfigByIds" parameterType="Long[]">
        delete from intervention_risk_config
        where config_id in
        <foreach item="configId" collection="array" open="(" separator="," close=")">
            #{configId}
        </foreach>
    </delete>

</mapper>
