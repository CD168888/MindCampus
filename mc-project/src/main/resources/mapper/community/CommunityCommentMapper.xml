<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mc.community.mapper.CommunityCommentMapper">

    <resultMap type="com.mc.community.domain.CommunityComment" id="CommunityCommentResult">
        <result property="commentId"    column="comment_id"    />
        <result property="postId"    column="post_id"    />
        <result property="studentId"    column="student_id"    />
        <result property="content"    column="content"    />
        <result property="isAnonymous"    column="is_anonymous"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="studentName"    column="student_name"    />
    </resultMap>

    <sql id="selectCommunityCommentVo">
        select c.comment_id, c.post_id, c.student_id, c.content, c.is_anonymous, c.status, c.create_by, c.create_time, c.update_by, c.update_time, c.remark,
               s.name as student_name
        from community_comment c
        left join student_info s on c.student_id = s.student_id
    </sql>

    <select id="selectCommunityCommentList" parameterType="com.mc.community.domain.CommunityComment" resultMap="CommunityCommentResult">
        <include refid="selectCommunityCommentVo"/>
        <where>
            <if test="postId != null "> and c.post_id = #{postId}</if>
            <if test="studentId != null "> and c.student_id = #{studentId}</if>
            <if test="content != null  and content != ''"> and c.content like concat('%', #{content}, '%')</if>
            <if test="isAnonymous != null  and isAnonymous != ''"> and c.is_anonymous = #{isAnonymous}</if>
            <if test="status != null  and status != ''"> and c.status = #{status}</if>
        </where>
        order by c.create_time desc
    </select>

    <select id="selectCommunityCommentByCommentId" parameterType="Long" resultMap="CommunityCommentResult">
        <include refid="selectCommunityCommentVo"/>
        where c.comment_id = #{commentId}
    </select>

    <select id="selectCommunityCommentListByPostId" parameterType="Long" resultMap="CommunityCommentResult">
        <include refid="selectCommunityCommentVo"/>
        where c.post_id = #{postId}
        order by c.create_time asc
    </select>

    <insert id="insertCommunityComment" parameterType="com.mc.community.domain.CommunityComment" useGeneratedKeys="true" keyProperty="commentId">
        insert into community_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="postId != null">post_id,</if>
            <if test="studentId != null">student_id,</if>
            <if test="content != null">content,</if>
            <if test="isAnonymous != null">is_anonymous,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="postId != null">#{postId},</if>
            <if test="studentId != null">#{studentId},</if>
            <if test="content != null">#{content},</if>
            <if test="isAnonymous != null">#{isAnonymous},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCommunityComment" parameterType="com.mc.community.domain.CommunityComment">
        update community_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="postId != null">post_id = #{postId},</if>
            <if test="studentId != null">student_id = #{studentId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="isAnonymous != null">is_anonymous = #{isAnonymous},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where comment_id = #{commentId}
    </update>

    <delete id="deleteCommunityCommentByCommentId" parameterType="Long">
        delete from community_comment where comment_id = #{commentId}
    </delete>

    <delete id="deleteCommunityCommentByCommentIds" parameterType="String">
        delete from community_comment where comment_id in
        <foreach item="commentId" collection="array" open="(" separator="," close=")">
            #{commentId}
        </foreach>
    </delete>

    <delete id="deleteCommunityCommentByPostIds" parameterType="String">
        delete from community_comment where post_id in
        <foreach item="postId" collection="array" open="(" separator="," close=")">
            #{postId}
        </foreach>
    </delete>
</mapper>


